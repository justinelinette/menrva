{% extends 'base.html.j2' %}

{% block title %}menrva{% endblock %}

{% block content %}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="container card shadow rounded-3 w-50 h-10  ">
        <div class="row row-cols-auto">
            <div class="col-sm-12 p-3">
                <center>
                    <img src="{{ url_for('static', filename='images/menrva.png') }}" style="width: 150px;"><br><br>
                    <h3>Login</h3>
                </center>
            </div>
        </div>
        <div class="row">
            <div class="col"></div>
            <div class="col-sm-6 justify-content-center align-items-center">
                <form method="post" action="{{ url_for('user_views.login') }}">
                    <div class="form-group row">
                        <label for="inputUsername3" class="col-sm-4 col-form-label">Username</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="username" name="username"
                                placeholder="Username">
                        </div>
                    </div><br>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-4 col-form-label">Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Password">
                        </div>
                    </div><br>
            </div>
            <div class="col-sm-4 justify-content-center align-items-center">
                <p>Don't have an account? <a href="{{ url_for('user_views.register') }}">Register here</a></p>
            </div>
            <div class="col-sm-12">
                <center><button type="submit" value="Login" class="btn btn-primary m-3">Sign in</button>
                </center><br>
            </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}